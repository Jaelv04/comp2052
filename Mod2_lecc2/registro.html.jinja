<!DOCTYPE html>
<html lang="es">

<head>
<link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    <meta charset="UTF-8" <title></title>
</head>

<body>

    <h1>Registro de Usuario</h1>

    {% if mensaje %}
    <div class ="mensaje">
         {{mensaje}}
         </div>
         {% endif %}

    <form method="post" novalidate>
        {{ form.hidden_tag() }}

        <div class= "formC">
            {{ form.username.label }}
            {{ form.username(size=32, placeholder = "Nombre" )}}<br>
            {% for error in form.username.errors %}
            <span style="color: red;">{{ error }}</span>
            {% endfor %}
        </div>

        <div class= "formC">
            {{form.correo.label}}
            {{form.correo(size=32, placeholder="Correo@gmail.com")}}<br>
            {%for error in form.correo.errors%}
            <span style="color: red;">{{error}}</span>
            {%endfor%}
            </div>



        


        <div class= "formC">
            {{form.password.label}}
            {{form.password(size=32, placeholder="Password")}}<br>
            {%for error in form.password.errors%}
            <span style="color: red;">{{error}}</span>
            {%endfor%}



        </div>
        <div class= "formC">
         {{form.enviar()}}

        </div>

    </form>
</body>

</html>